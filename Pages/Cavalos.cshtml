@page
@model HipicaFacil.Pages.CavalosModel
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastro de Cavalos</title>
    <link rel="stylesheet" href="~/css/bootstrap-grid.min.css">
    <style>
        #cavalos {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

<<div>
    <h1>Cavalos</h1>
</div>
            #cavalos td, #cavalos th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #cavalos tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #cavalos tr:hover {
                background-color: #ddd;
            }

            #cavalos th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #888888;
                color: white;
            }

        /* Estilo para ocultar o formulário de edição por padrão */
        #formEditar {
            display: none;
        }

        /* Ajuste de espaçamento dos botões na coluna de Ações */
        .d-flex button {
            margin-right: 5px;
        }

        /* Ajuste de espaçamento das caixas de texto na área de edição */
        #formEditar .form-floating {
            margin-bottom: 10px;
        }

        /* Definindo a largura da coluna ID */
        #cavalos th:first-child,
        #cavalos td:first-child {
            width: 50px;
        }

        /* Estilo para mostrar o ID na área de edição */
        #formEditar #idInsumoEditar {
            background-color: #f2f2f2;
        }

        /* Adicionando borda na área de Insumos Registrados */
        #insumos-container {
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        /* Estilo para os títulos */
        h1, h3, h2 {
            font-family: "Arial Black", sans-serif;
            font-size: 20px; /* Altere o tamanho da fonte conforme necessário */
        }
    </style>
</head>
<body>
    <h1>Cadastro de Cavalos</h1>
    <br />
    <form method="post">
        <div class="row g-3">
            <div class="col-md-5">
                <div class="form-floating">
                    <input type="text" class="form-control" id="nomeCavalo" name="nomeCavalo" placeholder=" " required>
                    <label for="nomeCavalo">Nome do Cavalo:</label>
                </div>
            </div>
            <div class="row-1">
                <button type="submit" class="btn btn-primary">Adicionar</button>
            </div>
        </div>
        <br />
    </form>
    <!-- Adicionando borda na área de Cavalos Registrados -->
    <div id="cavalos">
        <h3>Cavalos</h3>
        @if (Model.Cavalos.Count > 0)
        {
            <table id="cavalos" class="table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Ações</th> <!-- Adicionando a coluna de Ações -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cavalo in Model.Cavalos)
                    {
                        <tr>
                            <td>@cavalo.Id</td>
                            <td>@cavalo.Nome</td>
                            <td>@cavalo.Raca</td>
                            <td>@cavalo.Peso</td>
                            <td>@cavalo.Idade</td>
                            <td>@cavalo.Altura</td>
                            <td class="d-flex">
                                <form method="post">
                                    <input type="hidden" name="idCavalo" value="@cavalo.Id" />
                                    <button type="submit" class="btn btn-danger">Apagar</button>
                                </form>
                                <!-- Adicionando um botão "Editar" -->
                                <button type="button" class="btn btn-primary" onclick="mostrarFormEditar('@cavalo.Nome', @cavalo.Id)">Editar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />

            <!-- Formulário de edição (inicialmente oculto) -->
            <div id="formEditar">
                <h2>Editar Cavalo</h2>
                <form method="post">
                    <div class="row g-3">
                        <div class="col-md-5">
                            <div class="form-floating">
                                <!-- Mostrar o ID sem permitir edição -->
                                <input type="number" class="form-control" id="idCavaloEditar" name="idCavaloEditar" placeholder=" " required readonly>
                                <label for="idCavaloEditar">ID do Cavalo:</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-5">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="novoNomeCavalo" name="novoNomeCavalo" placeholder=" " required>
                                <label for="novoNomeCavalo">Novo nome do Cavalo:</label>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row g-3">
                        <div class="col-md-5">
                            <!-- Botão "Cancelar" -->
                            <button type="button" class="btn btn-secondary" onclick="ocultarFormEditar()">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Editar</button>
                        </div>
                    </div>
                </form>
                <br />
            </div>
        }
        else
        {
            <p>Nenhum cavalo registrado.</p>
        }
    </div>

    <!-- Script JavaScript para mostrar/ocultar o formulário de edição -->
    <script>
        function mostrarFormEditar(nomeCavalo, idCavalo) {
            document.getElementById("novoNomeCavalo").value = nomeCavalo;
            document.getElementById("idCavaloEditar").value = idCavalo;
            document.getElementById("formEditar").style.display = "block";
        }

        function ocultarFormEditar() {
            document.getElementById("formEditar").style.display = "none";
        }
    </script>
</body>
</html>