<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HipicaFacil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HipicaFacil.styles.css" asp-append-version="true" />
    <style>
        .nav-link-side {
            padding: 30px 30px; /* Preenchimento */
            text-align: center; /* Alinhamento do texto */
            color: #9f793c; /* Cor do texto */
            font-size: 10px;
            text-decoration:none    
        }
        .navbar-custom {
            position: fixed;
            background-color: #f8f9fa; /* Cor de fundo */
            border-bottom: 1px solid #dee2e6; /* Borda inferior */
            position: relative; /* Posição relativa */
            z-index: 2000; /* Garante que a topbar esteja acima da sidebar */
            text-align: left; /* Alinha o conteúdo da topbar à esquerda */
        }

        /* Estilo personalizado para o footer */
        .footer-custom {
            background-color: #f8f9fa; /* Cor de fundo */
            border-top: 1px solid #dee2e6; /* Borda superior */
            position: relative; /* Posição relativa */
            z-index: 1000; /* Z-index para sobrepor a sidebar */
            text-align: left; /* Alinha o conteúdo do footer à esquerda */
            margin-left: 0; /* Remove a margem */
        }

        /* Estilo para a barra lateral (sidebar) */
        #sidebar {
            background-color: white; /* Cor de fundo */
            color: #fff; /* Cor do texto */
            width: 250px; /* Largura */
            position: fixed; /* Posição fixa */
            top: 0px; /* Alinhamento ao topo */
            left: 0; /* Alinhamento à esquerda */
            height: 100%; /* Altura total */
            overflow-y: auto; /* Rolagem vertical */
            padding-top: 100px; /* Preenchimento superior */
            z-index: 1000; /* Z-index */
            font-family:Arial, Helvetica, sans-serif;
        }

            #sidebar .sidebar-heading {
                padding: 20px; /* Preenchimento */
                text-align: center; /* Alinhamento do texto */
                font-size: 24x; /* Tamanho da fonte */
                color: #fff; /* Cor do texto */

            }



                #sidebar .nav-link:hover {
                    /* background-color: dimgrey; /* Cor de fundo ao passar o mouse */ */

                }

            #sidebar .active {
                background-color: #2c3e50; /* Cor de fundo do item ativo */
            }

        /* Estilo para o conteúdo principal */
        #main-content {
            margin-left: 250px; /* Margem esquerda */
            padding: 20px; /* Preenchimento */
            margin-top: 0px; /* Margem superior */
            margin-bottom: 20px
            background-color: #ecf0f1; /* Cor de fundo */
            z-index: 0; /* Z-index */
            position: relative; /* Posição relativa */
        }
    </style>
</head>
<body>

    <!-- TOP BAR -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand align-left mr-auto" asp-area="" asp-page="/Index">HipicaFacil</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <!-- Barra lateral (sidebar) -->
    <nav id="sidebar">
        <ul class="list-unstyled components d-flex flex-column align-items-center gap-4">
            <li class="nav-item">
                <a class="nav-link-side fs-3 text" asp-area="" asp-page="/Index">Home</a>
            </li>
            @* <li class="nav-item">
                <a class="nav-link-side fs-3 text" asp-area="" asp-page="/Index">Clientes</a>
            </li> *@
            <li class="nav-item">
                <a class="nav-link-side fs-3 text" asp-area="" asp-page="/Cavalos">Cavalos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link-side fs-3 text" asp-area="" asp-page="/Estoque">Estoque</a>
            </li>
            @* <li class="nav-item">
                <a class="nav-link-side fs-3 text" asp-area="" asp-page="/Index">Receitas</a>
            </li> *@
            @* <li class="nav-item">
                <a class="nav-link-side fs-3 text" asp-area="" asp-page="/Index">Agenda</a>
            </li> *@
            <li class="nav-item">
                <a class="nav-link-side fs-3 text" asp-area="" asp-page="/Index">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link-side fs-3 text" asp-area="" asp-page="/Privacy">Privacidade</a>
            </li>
        </ul>
    </nav>

    <!-- Conteúdo principal -->
    <div id="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted footer-custom">
        <div class="container-fluid">
            &copy; 2024 - HipicaFacil - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
